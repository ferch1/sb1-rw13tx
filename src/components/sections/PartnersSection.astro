---
import PartnerLogo from '../PartnerLogo';

const partners = [
  { name: "Bayer", logo: "/images/partners/bayer.png" },
  { name: "BASF", logo: "/images/partners/basf.png" },
  { name: "Syngenta", logo: "/images/partners/syngenta.png" },
  { name: "Corteva", logo: "/images/partners/corteva.png" }
];
---

<section id="empresas" class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-primary mb-12">Empresas Colaboradoras</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {partners.map((partner) => (
        <PartnerLogo {...partner} />
      ))}
    </div>
  </div>
</section>